  "components": {
    "schemas": {
      "BookingCreateDTO": {
        "required": [
          "movieId",
          "showtimeId",
          "userId"
        ],
        "type": "object",
        "properties": {
          "userId": {
            "type": "integer",
            "format": "int32"
          },
          "showtimeId": {
            "type": "integer",
            "format": "int32"
          },
          "movieId": {
            "type": "integer",
            "format": "int32"
          },
          "ticketCount": {
            "maximum": 10,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "MovieCreateDTO": {
        "required": [
          "title"
        ],
        "type": "object",
        "properties": {
          "title": {
            "maxLength": 200,
            "minLength": 0,
            "type": "string"
          },
          "genre": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string",
            "nullable": true
          },
          "language": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string",
            "nullable": true
          },
          "format": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string",
            "nullable": true
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "imageUrl": {
            "maxLength": 1255,
            "minLength": 0,
            "type": "string",
            "format": "uri",
            "nullable": true
          },
          "isActive": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "MovieWithShowTimesDTO": {
        "required": [
          "movie",
          "shows"
        ],
        "type": "object",
        "properties": {
          "movie": {
            "$ref": "#/components/schemas/MovieCreateDTO"
          },
          "shows": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ShowTimeCreateDTO"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "MovieWithShowTimesUpdateDTO": {
        "required": [
          "movie",
          "shows"
        ],
        "type": "object",
        "properties": {
          "movie": {
            "$ref": "#/components/schemas/MovieCreateDTO"
          },
          "shows": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ShowTimeUpdateDTO"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ShowTimeCreateDTO": {
        "required": [
          "movieId",
          "showDate",
          "showTime"
        ],
        "type": "object",
        "properties": {
          "movieId": {
            "type": "integer",
            "format": "int32"
          },
          "showDate": {
            "type": "string",
            "format": "date"
          },
          "showTime": {
            "minLength": 1,
            "pattern": "^(0[0-9]|1[0-9]|2[0-3]):[0-5][0-9]$",
            "type": "string"
          },
          "availableSeats": {
            "maximum": 250,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "isActive": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "ShowTimeUpdateDTO": {
        "required": [
          "movieId",
          "showDate",
          "showTime"
        ],
        "type": "object",
        "properties": {
          "movieId": {
            "type": "integer",
            "format": "int32"
          },
          "showDate": {
            "type": "string",
            "format": "date"
          },
          "showTime": {
            "minLength": 1,
            "pattern": "^(0[0-9]|1[0-9]|2[0-3]):[0-5][0-9]$",
            "type": "string"
          },
          "availableSeats": {
            "maximum": 250,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "isActive": {
            "type": "boolean"
          },
          "showtimeId": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UserLoginDTO": {
        "required": [
          "email",
          "password"
        ],
        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "UserRegisterDTO": {
        "required": [
          "email",
          "firstName",
          "lastName",
          "password",
          "phone"
        ],
        "type": "object",
        "properties": {
          "firstName": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "lastName": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "pattern": "^[a-zA-Z0-9._%+-]+@(gmail|outlook|yahoo|vivejaitservices|Tixora)\\.(com|org)$",
            "type": "string",
            "format": "email"
          },
          "phone": {
            "maxLength": 10,
            "minLength": 10,
            "pattern": "^[6-9]\\d{9}$",
            "type": "string"
          },
          "password": {
            "maxLength": 100,
            "minLength": 8,
            "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[^\\da-zA-Z]).{8,}$",
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "WeatherForecast": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "temperatureC": {
            "type": "integer",
            "format": "int32"
          },
          "temperatureF": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "summary": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
